{
  "title": "Configuration du Scraper E-commerce Multi-Plateformes",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "search_terms": {
      "title": "Search terms",
      "type": "array",
      "description": "To extract contact details from Google places, simply enter",
      "example": ["restaurant", "hotel", "shop"],
      "prefill": []
    },
    "location": {
       "title": "Location (use only one location per run)",
       "type": "string",
       "description": "Location to search in",
       "example": "FRANCE",
       "prefill": "FRANCE"
     },
    "number_of_places": {
      "title": "Number of places to extract (per each search term or URL)",
      "type": "integer",
      "description": "Maximum number of places to extract",
      "minimum": 1,
      "maximum": 1000000
    },
    "language": {
      "title": "Language",
      "type": "string",
      "description": "Language for the search results",
      "editor": "select",
      "enum": ["fr", "en", "es", "de", "it", "pt"],
      "enumTitles": ["Fran√ßais (France)", "English", "Espa√±ol", "Deutsch", "Italiano", "Portugu√™s"]
    },
    "platforms": {
      "title": "Plateformes e-commerce",
      "type": "array",
      "description": "S√©lectionnez les plateformes √† scraper",
      "editor": "select",
      "items": {
        "type": "string",
        "enum": ["amazon", "ebay", "walmart", "etsy", "shopify"]
      },
      "uniqueItems": true
    },
    "filters_and_search": {
      "title": "üéØ Filters and precise search",
      "type": "object",
      "description": "Various extra features, filters, and sorting options",
      "properties": {
        "track_prices": {
          "title": "Suivi des prix",
          "type": "boolean",
          "description": "Activer le suivi automatique des prix"
        },
        "analyze_trends": {
          "title": "Analyse des tendances",
          "type": "boolean",
          "description": "Analyser les tendances de prix et de popularit√©"
        },
        "include_reviews": {
          "title": "Inclure les avis clients",
          "type": "boolean",
          "description": "Extraire les avis et notes des produits"
        },
        "condition": {
          "title": "√âtat du produit",
          "type": "string",
          "description": "Filtrer par √©tat du produit",
          "editor": "select",
          "enum": ["all", "new", "used", "refurbished"],
          "enumTitles": ["Tous", "Neuf", "Occasion", "Reconditionn√©"]
        }
      }
    },
    "geolocation_parameters": {
      "title": "üë§ Geolocation parameters",
      "type": "object",
      "description": "Alternative ways to start the input",
      "properties": {
        "latitude": {
          "title": "Latitude",
          "type": "number",
          "description": "Latitude coordinate",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "title": "Longitude",
          "type": "number",
          "description": "Longitude coordinate",
          "minimum": -180,
          "maximum": 180
        },
        "radius": {
          "title": "Search radius",
          "type": "integer",
          "description": "Search radius in kilometers",
          "minimum": 1,
          "maximum": 100,
          "unit": "km"
        }
      }
    },
    "google_maps_urls": {
      "title": "üîó Google Maps URL instead of search terms",
      "type": "object",
      "description": "Use Google Maps URLs instead of search terms",
      "properties": {
        "urls": {
          "title": "Google Maps URLs",
          "type": "array",
          "description": "List of Google Maps URLs to scrape",
          "example": ["https://maps.google.com/maps?q=restaurants+paris"]
        }
      }
    },
    "run_options": {
       "title": "‚öôÔ∏è Run options",
       "type": "object",
       "description": "Configuration options for the scraper run",
       "properties": {
         "max_results": {
          "title": "Maximum results",
          "type": "string",
          "description": "Maximum number of results to return"
        },
         "build": {
          "title": "Build",
          "type": "string",
          "description": "Build version to use"
        },
         "timeout": {
          "title": "Timeout",
          "type": "string",
          "description": "Maximum run time"
        },
         "memory": {
          "title": "Memory",
          "type": "string",
          "description": "Memory allocation"
        },
         "proxy_settings": {
           "title": "Configuration des proxies",
           "type": "object",
           "description": "Param√®tres avanc√©s pour les proxies",
           "properties": {
             "use_proxy": {
                "title": "Utiliser des proxies",
                "type": "boolean",
                "description": "Activer l'utilisation de proxies"
             },
             "proxy_country": {
                "title": "Pays du proxy",
                "type": "string",
                "description": "Code pays pour les proxies (ex: FR, US, DE)",
               "pattern": "^[A-Z]{2}$"
             }
           }
         }
       }
     }
  },
  "required": ["search_terms", "location"]
}