# Configuration Apify
APIFY_TOKEN=your_apify_token_here
APIFY_DEFAULT_DATASET_ID=your_dataset_id_here
APIFY_DEFAULT_KEY_VALUE_STORE_ID=your_kvs_id_here

# Configuration des scrapers
DEFAULT_REQUEST_DELAY=1
MAX_RETRIES=3
TIMEOUT_SECONDS=30
USER_AGENT_ROTATION=true

# Configuration des proxies
USE_PROXY=true
PROXY_GROUPS=RESIDENTIAL,DATACENTER
PROXY_COUNTRY_CODE=US

# Configuration Amazon
AMAZON_BASE_URL=https://www.amazon.com
AMAZON_MAX_PAGES=100
AMAZON_REQUEST_DELAY=2

# Configuration eBay
EBAY_BASE_URL=https://www.ebay.com
EBAY_MAX_PAGES=100
EBAY_REQUEST_DELAY=1

# Configuration Walmart
WALMART_BASE_URL=https://www.walmart.com
WALMART_MAX_PAGES=100
WALMART_REQUEST_DELAY=1

# Configuration Etsy
ETSY_BASE_URL=https://www.etsy.com
ETSY_MAX_PAGES=100
ETSY_REQUEST_DELAY=2

# Configuration Shopify
SHOPIFY_STORES=store1.myshopify.com,store2.myshopify.com
SHOPIFY_REQUEST_DELAY=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=scraper.log

# Base de données (optionnel)
DATABASE_URL=sqlite:///scraper_data.db
ENABLE_DATABASE_STORAGE=false

# Cache
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_TYPE=memory

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8080

# Sécurité
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Notifications (optionnel)
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Développement
DEBUG_MODE=false
SAVE_HTML_RESPONSES=false
HTML_RESPONSES_DIR=./debug/html_responses